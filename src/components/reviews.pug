section.reviews
    .wrapper
        h2.reviews__title.title Что обо мне говорят
        .reviews__controls
            button.reviews__control-next(data-value='-1' type='button')
                +icon('arrow-down', 'reviews__control-icon')
            button.reviews__control-prev(data-value='1' type='button')
                +icon('arrow-down', 'reviews__control-icon')
        ul.reviews__comment-list
            each item in items
                li.reviews__comment-item
                    +icon('quote', 'reviews__comment-icon')
                    .reviews__comment-text.text #{item.comment}
                    .reviews__comment-sender
                        .reviews__comment-avatar(style=`background-image: url('${item.avatar}')`)
                        .reviews__comment-sender-info
                            .reviews__comment-sender-name.text #{item.name}
                            .reviews__comment-sender-position.text #{item.position}