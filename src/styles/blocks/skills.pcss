.skills {
    position: relative;
    margin-bottom: 160px;

    .wrapper {
        display: grid;
        row-gap: 80px;
        grid-template-columns: 36% auto auto;

        &:before {
            content: '';
            grid-area: 1 / 1 / 3 / 2;
            @include bg-img('../images/content/backpack.png');
            -webkit-background-size: contain;
            background-size: 140%;
            background-repeat: no-repeat;
            background-position: -86px bottom;

            @include laptop {
                background-position: 70% bottom;
                -webkit-background-size: 182%;
                background-size: 182%;
                
            }
        }

        @include laptop {
            max-width: 100%;
            grid-template-columns: 32% auto auto;
        }
    }

    &__hero {
        display: grid;
        row-gap: 60px;
        margin: 0 auto;
        width: 40%;
        grid-area: 1 / 1 / 2 / 4;

        @include laptop {
            width: 46%;
        }
    }

    &__wrapper {
        max-width: 786px;
        display: grid;
        grid-template-rows: auto auto;
        row-gap: 50px;
        grid-area: 2 / 2 / 3 / 4;
        justify-self: end;

        @include laptop {
            justify-self: start;
            width: 100%;
            max-width: initial;
            padding-right: 5rem;
        }
    }

    &__list {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: auto 1fr;
        column-gap: 54px;
        row-gap: 40px;
    }

    &__list-name {
        grid-area: 1 / 1 / 2 / 5;
        font-size: 24px;
        font-weight: 700;
    }

    &__item {
        position: relative;
    }

    &__item-progressbar {
        display: inline-block;
        width: 100%;
        height: 100%;
        transform: rotate(-180deg);
    }

    &__item-circle {
        stroke: $circle-color;
    }

    &__item-circle,
    &__item-progress {
        fill: transparent;
    }

    &__item-progress {
        stroke-dasharray: 285;
        stroke-dashoffset: 285;
        animation: fill 100s linear infinite;
        animation-play-state: paused;
    }

    &__item-progress[style="animation-delay: -100s"] {
        animation: initial;
        stroke-dashoffset: 0;
    }

    .circle__item-text {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translateX(-50%) translateY(-50%);
        text-align: center;
        font-size: 18px;
        font-weight: 700;
    }
}


@keyframes fill {
    from {
        stroke-dashoffset: 285;
    }

    to {
        stroke-dashoffset: 0;
    }
}