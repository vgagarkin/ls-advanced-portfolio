.main-menu {
    align-self: center;

    &--footer {
        color: white;
    }

    &__list {
        display: flex;
        flex-direction: row;
        justify-content: space-between;
    }

    &__link {
        text-decoration: none;
        font-size: 16px;
        transition: $transition;

        &:hover {
            color: $link-hover;
        }
    }
}